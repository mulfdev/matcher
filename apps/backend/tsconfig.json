{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "NodeNext",
    "outDir": "../../app-dist/server",
    "sourceMap": true,

    "lib": ["es2022"]
  },
   "include": [
    "**/*.ts",
    "**/*.mjs",
    "**/*.d.ts"
  ],
   "exclude": [
    "node_modules",
    "dist",
    "old-bot-src"
  ]
}
