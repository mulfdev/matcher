{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "outDir": "../dist/server",
    "rootDir": "src",
    "sourceMap": true,
    "lib": ["es2022"]
  },
  "include": [
    "src/**/*",
    "*.d.ts",
    "knexfile.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}

